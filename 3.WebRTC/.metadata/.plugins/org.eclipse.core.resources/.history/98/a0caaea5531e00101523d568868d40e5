	<script>
		let simpleUser;

		async function createSimpleUser() {
			const server = "ws://192.168.1.96:5066";
			const aor = "sip:8887@192.168.1.96";
			const options = {
				media: {
					constraints: {audio: true, video: false},
					remote: {
						audio: new Audio()
					}
				},
				userAgentOptions: {
					uri: aor,
					authorizationUsername: "8887",
					authorizationPassword: "88871!",
					transportOptions: {
						server
					}
				}
			};

			simpleUser = new SIP.SimpleUser(server, options);

			simpleUser.delegate = {
				onCallAnswered: () => {
					$('#callStatus').text("âœ… í†µí™” ì—°ê²°ë¨");
				},
				onCallHangup: () => {
					$('#callStatus').text("ğŸ“´ í†µí™” ì¢…ë£Œë¨");
				},
				onCallReceived: () => {
					$('#callStatus').text("ğŸ“¥ ìˆ˜ì‹  ì „í™”ê°€ ìˆìŠµë‹ˆë‹¤.");
				}
			};

			try {
				await simpleUser.connect();
				await simpleUser.register();
			} catch (e) {
				console.error("ì—°ê²° ì‹¤íŒ¨:", e);
				$('#callStatus').text("âŒ ì—°ê²° ì‹¤íŒ¨: " + e.message);
			}
		}

		async function makeCall() {
			const extension = $('#extensionInput').val().trim();
			if (!extension) {
				$('#callStatus').text('âŒ ë‚´ì„  ë²ˆí˜¸ë¥¼ ì…ë ¥í•˜ì„¸ìš”.');
				return;
			}

			try {
				await navigator.mediaDevices.getUserMedia({audio: true});

				if (!simpleUser) {
					await createSimpleUser();
				}

				$('#callStatus').text(`ğŸ“ ${extension}ë¡œ ì „í™” ê±°ëŠ” ì¤‘...`);

				await simpleUser.call(`sip:${extension}@192.168.1.96`);
			} catch (err) {
				console.error("ì „í™” ì˜¤ë¥˜:", err);
				$('#callStatus').text("âŒ ì˜¤ë¥˜ ë°œìƒ: " + err.message);
