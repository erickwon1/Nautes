	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function () {
			let targetButtonId = null;
			const saveBtn = document.getElementById('saveModifiedTableBtn');
			$('#IP_POOLS, #RTP_POOLS, #MRWS_CONFIG, #ROUTE2, #PROXY_CHK_LIST, #EX_ROUTE').on('keypress', function (key) {
				if (key.keyCode == 13) {
					$("#saveModifiedTableBtn").click();
				}
			});

			$("#searchButton").click(function () {
				$("#searchFrm").submit();
			});

			$("#modifyButton").click(function () {
				modifyData().then(() => {
					$("#searchFrm").submit();
				}).catch(error => {
					console.error("수정 중 오류 발생:", error);
				});
			});

			document.getElementById('modifyModalButton').addEventListener('click', () => {
				targetButtonId = 'modifyButton';
				saveBtn.textContent = '수정';
			});

			$('#saveModifiedTableBtn').on('click', function () {
				const ModifiedTableModal = bootstrap.Modal.getInstance(document.getElementById('ModifiedTableModal'));
				ModifiedTableModal.hide();
				if (targetButtonId) {
					$('#' + targetButtonId).trigger('click');
				}
				targetButtonId = null;
			});
		});

		function modifyData() {
			if (!confirm(`modified table을 수정하시겠습니까?`)) {
				return;
			}

			const data = {
				IP_POOLS: Number($('#IP_POOLS').val()) || '0',
				RTP_POOLS: Number($('#RTP_POOLS').val()) || '0',
				MRWS_CONFIG: Number($('#MRWS_CONFIG').val()) || '0',
				ROUTE2: Number($('#ROUTE2').val()) || '0',
				PROXY_CHK_LIST: Number($('#PROXY_CHK_LIST').val()) || '0',
				EX_ROUTE: Number($('#EX_ROUTE').val()) || '0'
			};
			console.log(data)

			$.ajax({
				url: '/management/modifiedTable/modify',
				type: 'POST',
				contentType: 'application/json',
				data: JSON.stringify(data),
				success: function (res) {
					alert(`성공적으로 수정되었습니다.`);
					location.reload();
				},
				error: function (xhr, status, error) {
					alert('수정 중 오류가 발생했습니다.');
					console.error(error);
				}
			});
		}
		document.addEventListener("DOMContentLoaded", function () {
			const IP_POOLS = document.getElementById("IP_POOLS");
			const RTP_POOLS = document.getElementById("RTP_POOLS");
			const MRWS_CONFIG = document.getElementById("MRWS_CONFIG");
			const ROUTE2 = document.getElementById("ROUTE2");
			const PROXY_CHK_LIST = document.getElementById("PROXY_CHK_LIST");
			const EX_ROUTE = document.getElementById("EX_ROUTE");

			IP_POOLS.addEventListener("input", function () {
				this.value = this.value.replace(/[^0-1]/g, "").slice(0, 1);
			});

			RTP_POOLS.addEventListener("input", function () {
				this.value = this.value.replace(/[^0-1]/g, "").slice(0, 1);
			});

			MRWS_CONFIG.addEventListener("input", function () {
				this.value = this.value.replace(/[^0-1]/g, "").slice(0, 1);
			});

			ROUTE2.addEventListener("input", function () {
				this.value = this.value.replace(/[^0-1]/g, "").slice(0, 1);
			});

			PROXY_CHK_LIST.addEventListener("input", function () {
				this.value = this.value.replace(/[^0-1]/g, "").slice(0, 1);
			});

			EX_ROUTE.addEventListener("input", function () {
				this.value = this.value.replace(/[^0-1]/g, "").slice(0, 1);
			});
		});
	</script>

