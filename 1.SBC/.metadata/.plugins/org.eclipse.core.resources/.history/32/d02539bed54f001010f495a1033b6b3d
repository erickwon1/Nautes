	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function () {
			let targetButtonId = null;
			const saveBtn = document.getElementById('saveMrwsConfigBtn');
			$('#mrws_id, #mrws_type, #mrws_addr, #bandwidth, #mrws_rtp_base_port, #mrws_rtp_port_range').on('keypress', function (key) {
				if (key.keyCode == 13) {
					$("#saveMrwsConfigBtn").click();
				}
			});

			$("#searchButton").click(function () {
				$("#searchFrm").submit();
			});

			$("#modifyButton").click(function () {
				modifyData().then(() => {  // 삭제 완료 후 실행
					$("#searchFrm").submit();
				}).catch(error => {
					console.error("수정 중 오류 발생:", error);
				});
			});

			document.getElementById('modifyModalButton').addEventListener('click', () => {
				targetButtonId = 'modifyButton';
				saveBtn.textContent = '수정';
			});

			$('#saveMrwsConfigBtn').on('click', function () {
				const SysConfigModal = bootstrap.Modal.getInstance(document.getElementById('MrwsConfigModal'));
				SysConfigModal.hide();
				if (targetButtonId) {
					$('#' + targetButtonId).trigger('click');
				}
				targetButtonId = null;
			});
		});

		function modifyData() {
			if (!confirm(`mrws configuration을 수정하시겠습니까?`)) {
				return;
			}

			const data = {
				mrws_id: $('#mrws_id').val(),
				mrws_type: $('#mrws_type').val(),
				mrws_addr: $('#mrws_addr').val(),
				bandwidth: $('#bandwidth').val(),
				mrws_rtp_base_port: $('#mrws_rtp_base_port').val(),
				mrws_rtp_port_range: $('#mrws_rtp_port_range').val()
			};

			$.ajax({
				url: '/management/mrwsConfig/modify',
				type: 'POST',
				contentType: 'application/json',
				data: JSON.stringify(data),
				success: function (res) {
					alert(`성공적으로 수정되었습니다.`);
					location.reload();
				},
				error: function (xhr, status, error) {
					alert('수정 중 오류가 발생했습니다.');
					console.error(error);
				}
			});
		}
	</script>

</head>

