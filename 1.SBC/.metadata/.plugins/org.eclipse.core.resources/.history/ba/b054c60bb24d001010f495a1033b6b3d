	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function () {
			let targetButtonId = null;
			const saveBtn = document.getElementById('saveMrwsConfigBtn');
			$('#mrws_id, #mrws_type, #mrws_addr, #bandwidth, #mrws_rtp_base_port, #mrws_rtp_port_range').on('keypress', function (key) {
				if (key.keyCode == 13) {
					$("#saveMrwsConfigBtn").click();
				}
			});

			$("#searchButton").click(function () {
				$("#searchFrm").submit();
			});

			$("#modifyButton").click(function () {
				modifyData().then(() => {  // 삭제 완료 후 실행
					$("#searchFrm").submit();
				}).catch(error => {
					console.error("수정 중 오류 발생:", error);
				});
			});

			document.getElementById('modifyModalButton').addEventListener('click', () => {
				targetButtonId = 'modifyButton';
				saveBtn.textContent = '수정';
			});

			$('#saveMrwsConfigBtn').on('click', function () {
				const SysConfigModal = bootstrap.Modal.getInstance(document.getElementById('MrwsConfigModal'));
				SysConfigModal.hide();
				if (targetButtonId) {
					$('#' + targetButtonId).trigger('click');
				}
				targetButtonId = null;
			});
		});

		function modifyData() {
			if (!confirm(`mrws configuration을 수정하시겠습니까?`)) {
				return;
			}

			const data = {
				sbc_id: $('#sbc_id').val(),
				sip_port: $('#sip_port').val(),
				use_protocol: $('#use_protocol').val(),
				media_trans_mod: $('#media_trans_mod').val(),
				always_nat: $('#always_nat').val(),
				sscs_port: $('#sscs_port').val(),
				mrms_addr: $('#mrms_addr').val(),
				mrms_port: $('#mrms_port').val(),
				mrws_port: $('#mrws_port').val(),
				ping_pong_count: $('#ping_pong_count').val(),
				re_regist_time: $('#re_regist_time').val(),
				expire_time: $('#expire_time').val()
			};

			$.ajax({
				url: '/management/sysConfig/modify',
				type: 'POST',
				contentType: 'application/json',
				data: JSON.stringify(data),
				success: function (res) {
					alert(`성공적으로 수정되었습니다.`);
					location.reload();
				},
				error: function (xhr, status, error) {
					alert('수정 중 오류가 발생했습니다.');
					console.error(error);
				}
			});
		}

		document.addEventListener("DOMContentLoaded", function () {
			const px_port = document.getElementById("px_port");
			const opt_chkcount = document.getElementById("opt_chkcount");
			const opt_sndterm = document.getElementById("opt_sndterm");

			px_port.addEventListener("input", function () {
				this.value = this.value.replace(/[^0-9]/g, "").slice(0, 4);
			});

			opt_chkcount.addEventListener("input", function () {
				this.value = this.value.replace(/[^0-9]/g, "").slice(0, 4);
			});

			opt_sndterm.addEventListener("input", function () {
				this.value = this.value.replace(/[^0-9]/g, "").slice(0, 4);
			});

			const rows = document.querySelectorAll(".proxyChkList-row");

			rows.forEach(row => {
				row.addEventListener("click", function () {
					const cells = row.querySelectorAll("td");
					const mrws_id = cells[1].textContent.trim();
					const mrws_type = cells[2].textContent.trim();
					const mrws_addr = cells[3].textContent.trim();
					const bandwidth = cells[4].textContent.trim();
					const mrws_rtp_base_port = cells[5].textContent.trim();
					const mrws_rtp_port_range = cells[6].textContent.trim();
					$("#mrws_id").val(mrws_id);
					$("#mrws_type").val(mrws_type);
					$("#mrws_addr").val(mrws_addr);
					$("#bandwidth").val(bandwidth);
					$("#mrws_rtp_base_port").val(mrws_rtp_base_port);
					$("#mrws_rtp_port_range").val(mrws_rtp_port_range);
				});
			});
		});
	</script>

