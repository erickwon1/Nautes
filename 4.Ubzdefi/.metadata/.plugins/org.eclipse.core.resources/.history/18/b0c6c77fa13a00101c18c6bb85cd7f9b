<script>

	function changepassword() {
		$.ajax({
			type: "POST",
			url: "/changepassword",
			data: {
				login_id: $("#login_id").val(),
				admin_phone: $("#admin_phone").val()
			},
			success: function () {
				startAuthModal();
			},
			error: function (xhr) {
				alert("인증 요청 실패: " + xhr.responseText);
			}
		});
	}</script>

